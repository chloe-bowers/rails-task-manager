<h2><%= @task.title %></h2>

<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<button><%= link_to "Back to tasks", tasks_path %></button>

<button><%= link_to "Edit", edit_task_path %></button>

<button><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></button>
